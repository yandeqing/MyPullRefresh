<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="#000000">
    <TextView
        android:id="@+id/pull_to_refresh_text"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:text="下拉刷新"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#FFFFFF"
        android:textSize="13sp" />
    <ImageView
        android:visibility="visible"
        android:id="@+id/refresh_arrow_image"
        android:src="@drawable/refresh_arrow_img"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="65dp"
        android:layout_width="20dp"
        android:scaleType="centerInside"
        android:layout_height="20dp" />
    <ImageView
        android:visibility="invisible"
        android:id="@+id/wait_circuit_image"
        android:src="@drawable/wait_circuit_img"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="65dp"
        android:layout_width="20dp"
        android:scaleType="centerInside"
        android:layout_height="20dp"  />
    <ImageView
        android:visibility="invisible"
        android:id="@+id/refresh_success_image"
        android:src="@drawable/refresh_success_img"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="65dp"
        android:layout_width="30dp"
        android:layout_height="20dp" />

    <ImageView
        android:id="@+id/refresh_failure_image"
        android:layout_width="30dp"
        android:layout_height="20dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="65dp"
        android:src="@drawable/refresh_failure_img"
        android:visibility="invisible" />


</RelativeLayout>